<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".activities.OrderManagementActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_secondary"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_back"
            app:tint="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Order Management"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/searchBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_search"
            app:tint="@color/white" />

    </LinearLayout>

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/searchLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <com.mancj.materialsearchbar.MaterialSearchBar
            android:id="@+id/searchBar"
            style="@style/MaterialSearchBarLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mt_hint="Search orders..."
            app:mt_placeholder="Search by Order ID, Name, Email, Phone..."
            app:mt_maxSuggestionsCount="10" />

    </LinearLayout>

    <!-- Filter Chips - Status -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.chip.Chip
                android:id="@+id/allOrdersChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="All"
                android:checked="true"
                app:chipBackgroundColor="@color/my_secondary"
                android:textColor="@color/white"
                app:chipStrokeColor="@color/my_secondary" />

            <com.google.android.material.chip.Chip
                android:id="@+id/pendingChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Pending"
                app:chipBackgroundColor="@color/white"
                app:chipStrokeColor="@color/orange"
                android:textColor="@color/orange" />

            <com.google.android.material.chip.Chip
                android:id="@+id/confirmedChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Confirmed"
                app:chipBackgroundColor="@color/white"
                app:chipStrokeColor="@color/blue"
                android:textColor="@color/blue" />

            <com.google.android.material.chip.Chip
                android:id="@+id/shippingChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Shipping"
                app:chipBackgroundColor="@color/white"
                app:chipStrokeColor="@color/purple"
                android:textColor="@color/purple" />

            <com.google.android.material.chip.Chip
                android:id="@+id/deliveredChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Delivered"
                app:chipBackgroundColor="@color/white"
                app:chipStrokeColor="@color/green"
                android:textColor="@color/green" />

            <com.google.android.material.chip.Chip
                android:id="@+id/cancelledChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelled"
                app:chipBackgroundColor="@color/white"
                app:chipStrokeColor="@color/red"
                android:textColor="@color/red" />

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Order Count -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/orderCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 orders found"
            android:textColor="#616161"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/sortText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort by: Latest"
            android:textColor="@color/my_secondary"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Orders List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ordersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/pk"
            app:tint="#BDBDBD" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="No orders found"
            android:textColor="#616161"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Try adjusting your search or filter"
            android:textColor="#9E9E9E"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>

