<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/orderCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Order Icon -->
        <ImageView
            android:id="@+id/orderIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:padding="12dp"
            android:background="@drawable/profile_image_background"
            android:scaleType="centerInside"
            android:src="@drawable/pk"
            app:tint="@color/my_secondary" />

        <!-- Order Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Order ID -->
            <TextView
                android:id="@+id/orderIdText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order #123"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Customer Name -->
            <TextView
                android:id="@+id/customerNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="John Doe · 0987654321"
                android:textColor="#757575"
                android:textSize="14sp" />

            <!-- Email -->
            <TextView
                android:id="@+id/emailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="john@example.com"
                android:textColor="#9E9E9E"
                android:textSize="12sp" />

            <!-- Status & Payment Method Badges -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <!-- Status Badge -->
                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/quantity_white_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="Confirmed"
                    android:textColor="@color/blue"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!-- Payment Method Badge -->
                <TextView
                    android:id="@+id/paymentMethodText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/quantity_white_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="MOMO"
                    android:textColor="@color/momo_pink"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Order Details (Amount, Items, Date) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <!-- Total Amount -->
                <TextView
                    android:id="@+id/totalAmountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₫300,000"
                    android:textColor="@color/my_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Item Count -->
                <TextView
                    android:id="@+id/itemCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="3 items"
                    android:textColor="#616161"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Order Date -->
            <TextView
                android:id="@+id/orderDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="29 Oct 2025, 09:24"
                android:textColor="#9E9E9E"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Arrow Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_next"
            app:tint="#BDBDBD" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

